mixin content(post)
	include ../../../../common/text-parser.jade
	case post.type
		when 'status'
			div.text!= parse(post.text)
		when 'photo'
			div.text!= parse(post.text)
			ol.photos
				each photo in post.photos
					li.photo
						a(href= photo.url)
							if me !== null && userSettings.thumbnailyzeAttachedImageOfPost
								img.image.thumbnail(
									src= photo.thumbnailUrl,
									data-original-url= photo.url,
								alt= photo.name,
								title= photo.name)
							else
								img.image(src= photo.url,
									data-original-url= photo.url,
									alt= photo.name,
									title= photo.name)
