extends ../../../../base
include ../common

block title
	| トーク
		
block body
	div#search(role='search')
		div.form
			label(for='search-input')
				i.fa.fa-search
			input#search-input(type='search', placeholder='グループを検索', title='グループ名を入力してグループを探します')
		div.result
	main(role='main')
		if messages != null && messages.length > 0
			ol#talks
				each message in messages
					case message.type
						when 'user-message'
							+user-message(message)
						when 'group-message'
							+group-message(message)
						when 'group-send-invitation-activity'
							+group-send-invitation-activity(message)
		else
			p#empty-histories
				| 履歴はありません。
				br
				| グループを検索して、トークに参加できます。
	nav#nav
		ul
			li: a(href='/')
				i.fa.fa-clock-o
				p 履歴
			li: a(href='/i/users')
				i.fa.fa-user
				p ユーザー
			li.active: a
				i.fa.fa-users
				p グループ
			li: a(href='/i/group/create')
				i.fa.fa-plus
				p グループを作成
