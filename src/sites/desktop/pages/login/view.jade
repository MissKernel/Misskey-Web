extends ../../base

block title
	=locale.sites.desktop.pages.login.page_title
	
block body
	main
		header
			h1=locale.sites.desktop.pages.login.title
		form#form(action='/login', method='get')
			img#avatar(src= config.resourcesUrl + '/common/avatar.jpg', alt='')
			label
				i.fa.fa-at
				input#id(name='screen-name'
					type='text'
					pattern='^[0-9A-Za-z\-]+$'
					placeholder='User name'
					autocomplete='off'
					autofocus
					required)
			label
				i.fa.fa-lock
				input(name='password'
					type='password'
					placeholder='Password'
					autocomplete='off'
					required)
			button(type='submit')
				=locale.sites.desktop.pages.login.signin
