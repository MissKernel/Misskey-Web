extends ../../../ui
include ../followers-and-followings-common/user-of-list

block title
	= user.name + 'さんがフォローしているユーザー'

block meta
	meta(name='description', content= user.name + 'さんがフォローしているユーザー')
	meta(name='keywords', content='Misskey,' + user.screenName)

block assets
	script!= 'var USER = ' + JSON.stringify(user) + ';'

block content
	-
		function comma(str) {
			return String(str).replace( /(\d)(?=(\d\d\d)+(?!\d))/g, '$1,')
		}
	
	main(role='main')
		ol.users
			each user in followings
				+user(user)
