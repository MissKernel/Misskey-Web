extends ../layout
include ../../../common/views/post/smart/post

block title
	= user.name

block contents
	div#sub-contents
		div#friend-form
			if login
				if me.id != user.id
					if user.isFollowed
						p#friend-status
							i.fa.fa-heart
							| フォローされています
					if user.isFollowing
						button#friend-button.following
							i.fa.fa-minus-circle
							span.text フォロー中
					else
						button#friend-button.not-following
							i.fa.fa-plus
							span.text フォローする
				else
					p#friend-status
						i.fa.fa-smile-o
						| You
			else
				p
					| このユーザーをフォローするにはログインしてください
		
		p#liked-count
			i.fa.fa-star
			= comma(user.likedCount)
		
		if photoPosts != null && photoPosts.length > 0
			section#photos
				h2
					i.fa.fa-camera
					| Photos
				ol.photos
					each post in photoPosts
						each photo in post.photos
							li.photo(style='background-image: url("' + photo.thumbnailUrl + '")', title= post.createdAt)
								a(href= config.url + '/' + user.screenName + '/' + post.id)
	div#main-content
		ul.nav
			li.active
				i.fa.fa-comment
				= locale.sites.desktop.pages._user._home.timeline
			li
				i.fa.fa-comments-o
				= locale.sites.desktop.pages._user._home.all
			li
				i.fa.fa-fire
				= locale.sites.desktop.pages._user._home.popular
		div#timeline
			if timeline.length > 0
				div.posts
					each post in timeline
						+post(post)
				button.read-more
					| もっと読み込む
			else
				p.empty
					| このユーザーはまだ何も投稿していないようです。
