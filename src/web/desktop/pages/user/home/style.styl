@import "../style";

#main-content {
	flex: 1 1;
	padding: 16px;

	> .nav {
		display: block;
		margin: -12px 0 0 0;
		padding: 0;
		list-style: none;

		&:after {
			content: "";
			display: block;
			clear: both;
		}

		> li {
			display: block;
			float: left;
			margin: 0;
			padding: 0;

			> a {
				display: block;
				padding: 8px 12px;
				color: #94836F;

				> i {
					margin-right: 4px;
				}
			}
		}
	}

	#timeline {
		@import "../../../common/styles/timeline";
	}
}

#sub-contents {
	flex: 1 1 300px;
	max-width: 300px;
	padding: 0;
	text-align: center;
	color: #94836F;

	> .body {
		padding: 16px;

		.location {
			display: block;
			margin: 0;
			padding: 1em;
			border-bottom: solid 1px #DED8D2;

			i {
				margin-right: 4px;
			}
		}

		.url {
			display: block;
			margin: 0;
			padding: 1em;
			border-bottom: solid 1px #DED8D2;

			> a {
				color: inherit;

				i {
					margin-right: 4px;
				}
			}
		}

		.tags {
			display: block;
			margin: 0;
			padding: calc(1em - 8px);
			border-bottom: solid 1px #DED8D2;
			list-style: none;

			.tag {
				display: inline-block;
				margin: 8px;
				padding: 0;

				> a {
					color: #94836F;

					> i {
						margin-right: 0.25em;
						opacity: 0.7;
					}
				}
			}
		}

		.created-at {
			display: block;
			margin: 0;
			padding: 1em;

			i {
				margin-right: 4px;
			}
		}
	}
}
