@import "../../common";

* {
	font-family: '游ゴシック', 'YuGothic', 'ヒラギノ角ゴ ProN W3', 'Hiragino Kaku Gothic ProN', 'Meiryo UI', 'Meiryo', 'メイリオ', sans-serif;
}

html, body {
	margin: 0;
	padding: 0;
}

html {
	color: #444;
	background-color: #444;
	background-image: url("/entrance.jpg");
	background-attachment: fixed;
	background-repeat: no-repeat;
	background-position: center center;
	background-size: cover;
}

body {
	position: relative;
}

text-input() {
	-webkit-appearance: none;
	-moz-appearance: none;
	appearance: none;
	user-select: text;
	-moz-user-select: text;
	-webkit-user-select: text;
	-ms-user-select: text;
	display: inline-block;
	cursor: auto;
	box-sizing: border-box;
	padding: 16px 12px;
	margin: 0;
	width: 100%;
	font-size: 1em;
	color: #000;
	outline: none;
	border: solid 2px #eee;
	border-radius: 0;
	box-shadow: none;
	background: transparent;
	transition: all .5s ease;
	font-family: 'Meiryo UI', 'Meiryo', 'メイリオ', '游ゴシック', 'YuGothic', 'ヒラギノ角ゴ ProN W3', 'Hiragino Kaku Gothic ProN', sans-serif;

	&:hover {
		border-color: $theme-color;
		transition: all .2s ease;
	}

	&:focus {
		color: $theme-color;
		border-color: $theme-color;
		transition: all .1s ease;
	}
}

main {
	display: block;
	position: relative;
	padding-bottom: 32px;

	header {
		display: block;
		box-sizing: border-box;
		padding: 32px 64px;
		text-align: center;
		color: #fff;

		h1 {
			display: block;
			margin: 0;
			padding: 0;
			font-size: 2em;
			font-weight: normal;
			color: rgba(0, 0, 0, 0.5);
		}

		p {
			display: block;
			margin: 8px 0 0 0;
			padding: 0;
			color: rgba(0, 0, 0, 0.4);
		}
	}

	.body {
		box-sizing: border-box;
		width: 380px;
		margin: 0 auto;
		padding: 32px;
		background-image: url("/entrance.blur.jpg");
		background-attachment: fixed;
		background-repeat: no-repeat;
		background-position: center center;
		background-size: cover;
		background-clip: padding-box;
		//border-left: solid 16px $theme-color;
		border: solid 2px rgba(0, 0, 0, 0.05);

		#login-form {
			display: block;
			box-sizing: border-box;
			padding: 24px 32px 0 32px;
			background: #fff;
			background-clip: padding-box;
			//border: solid 8px rgba(0, 0, 0, 0.05);
			border: solid 2px rgba(0, 0, 0, 0.05);
			transform-origin: center top;
			transform: perspective(512px);

			h2 {
				display: block;
				margin: 0 0 12px 0;
				padding: 0 0 14px 0;
				text-align: center;
				text-transform: uppercase;
				font-size: 1em;
				font-weight: bold;
				color: #888;
				border-bottom: solid 1px #eee;

				> i {
					margin-left: 0.25em;
				}
			}

			label {
				display: block;
				position: relative;
				margin: 8px 0;

				i {
					display: block;
					pointer-events: none;
					position: absolute;
					bottom: 0;
					top: 0;
					left: 0;
					z-index: 1;
					margin: auto;
					padding: 0 16px;
					height: 1em;
					color: #898786;
				}

				input[type=text],
				input[type=password] {
					text-input()
					padding: 16px 12px 16px 38px;
					box-shadow: 0 0 0 1024px #fff inset;
				}
			}

			[type=submit] {
				-webkit-appearance: none;
				-moz-appearance: none;
				appearance: none;
				cursor: pointer;
				box-sizing: border-box;
				padding: 16px 16px 32px 16px;
				margin: 0;
				width: 100%;
				font-size: 1.2em;
				color: #555;
				outline: none;
				border: none;
				border-radius: 0;
				box-shadow: none;
				background: transparent;
				transition: all .5s ease;
				font-family: FontAwesome, '游ゴシック', 'YuGothic', 'ヒラギノ角ゴ ProN W3', 'Hiragino Kaku Gothic ProN', 'Meiryo UI', 'Meiryo', 'メイリオ', sans-serif;

				&:hover {
					color: $theme-color;
					transition: all .2s ease;
				}

				&:focus {
					color: $theme-color;
					transition: all .2s ease;
				}

				&:active {
					color: darken($theme-color, 30%);
					transition: all .2s ease;
				}
			}
		}

		#new {
			-webkit-appearance: none;
			-moz-appearance: none;
			appearance: none;
			display: block;
			position: relative;
			box-sizing: border-box;
			margin-top: 24px;
			padding: 18px 18px 18px 36px;
			line-height: 1em;
			font-size: 1em;
			color: #fff;
			text-transform: uppercase;
			text-align: center;
			text-decoration: none;
			outline: 0;
			border: 0;
			border-radius: 0;
			box-shadow: none;
			background: $theme-color;
			overflow: hidden;
			cursor: pointer;

			* {
				pointer-events: none;
			}

			i {
				position: absolute;
				top: 0;
				left: 0;
				padding: 18px;
				background: rgba(0, 0, 0, 0.1);
			}

			&:hover {
				text-decoration: none;
				background: darken($theme-color, 5%);
			}

			&:active {
				text-decoration: none;
				background: darken($theme-color, 10%);
			}

			.waves-ripple {
				border-radius: 8px;
			}
		}
	}
}
