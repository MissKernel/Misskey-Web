@import "../../common";

* {
	user-select: none;
	-moz-user-select: none;
	-webkit-user-select: none;
	-ms-user-select: none;
	cursor: default;
}

html, body {
	margin: 0;
	padding: 0;
}

html {
	color: #444;
	background-color: #fff;
	background-image: url("#/desktop/pages/signup/bg.jpg");
	background-attachment: fixed;
	background-repeat: no-repeat;
	background-position: center center;
	background-size: cover;

	&.logging {
		&, * {
			cursor: wait !important;
		}
	}
}

body > header {
	display: block;
	box-sizing: border-box;
	padding: 32px 64px;
	text-align: center;
	font-family: '游ゴシック', 'YuGothic', 'ヒラギノ角ゴ ProN W3', 'Hiragino Kaku Gothic ProN', 'Meiryo UI', 'Meiryo', 'メイリオ', sans-serif;
	color: #fff;
	border-top: solid 8px $theme-color;

	h1 {
		display: block;
		margin: 0;
		padding: 0;
		font-size: 2em;
		font-weight: normal;
		color: #fff;
	}
}

body > main {
	box-sizing: border-box;
	width: 434px;
	margin: 0 auto;
	padding: 32px;
	background-image: url("#/desktop/pages/signup/bg.blur.jpg");
	background-attachment: fixed;
	background-repeat: no-repeat;
	background-position: center center;
	background-size: cover;
	background-clip: padding-box;
	border: solid 1px rgba(0, 0, 0, 0.1);
	border-radius: 4px;

	#form {
		display: block;
		box-sizing: border-box;
		padding: 24px 32px 0 32px;
		background: #fff;
		background-clip: padding-box;
		//border: solid 8px rgba(0, 0, 0, 0.05);
		border: solid 1px rgba(0, 0, 0, 0.1);
		border-radius: 4px;

		label {
			display: block;
			position: relative;
			margin: 16px 0;

			> .caption {
				margin: 0 0 4px 0;
				color: darken($theme-color, 20%);
				font-size: 0.95em;

				> i {
					margin-right: 0.25em;
					color: $theme-color;
				}
			}

			> .info {
				display: block;
				margin: 4px 0;
				font-size: 0.8em;

				&[data-state='none'] {
					display: none;
				}

				&[data-state='error'] {
					color: #FF1161;
				}

				&[data-state='processing'] {
					color: #999;
				}

				&[data-state='ok'] {
					color: #3CB7B5;
				}

				> i {
					margin-right: 0.3em;
				}
			}

			&#screen-name {
				.profile-page-url-preview {
					display: block;
					margin: 4px 8px;
					font-size: 0.8em;
					color: #888;

					&:empty {
						display: none;
					}
				}
			}
		}

		[type=text], [type=password] {
			-webkit-appearance: none;
			-moz-appearance: none;
			appearance: none;
			user-select: text;
			-moz-user-select: text;
			-webkit-user-select: text;
			-ms-user-select: text;
			display: inline-block;
			cursor: auto;
			box-sizing: border-box;
			padding: 11px;
			margin: 0;
			width: 100%;
			font-size: 1em;
			color: #222;
			outline: none;
			border: solid 1px #ddd;
			border-radius: 3px;
			box-shadow: 0 0 0 114514px #fff inset;
			background: transparent;
			transition: all 0.2s ease;

			&:disabled {
				opacity: 0.5;
			}

			&:hover {
				border: solid 1px #bbb;
				transition: all 0s ease;
			}

			&:focus {
				color: darken($theme-color, 20%);
				border: solid 1px $theme-color;
				transition: all 0s ease;
			}
		}

		#agree-tou {
			padding: 4px 0;

			p {
				display: inline;
				color: #222;
			}
		}

		[type=submit] {
			-webkit-appearance: none;
			-moz-appearance: none;
			appearance: none;
			cursor: pointer;
			display: block;
			box-sizing: border-box;
			position: relative;
			padding: 12px;
			margin: 20px 0 22px 0;
			width: 100%;
			font-size: 1em;
			color: #fff;
			outline: none;
			border: none;
			border-radius: 3px;
			box-shadow: none;
			background: $theme-color;

			* {
				pointer-events: none;
			}

			&:before {
				content: "";
				display: block;
				width: 48px;
				height: 100%;
				position: absolute;
				top: 0;
				left: 0;
				background: rgba(0, 0, 0, 0.1);
				border-radius: 3px 0 0 3px;
			}

			> i {
				display: block;
				width: 48px;
				height: 1em;
				position: absolute;
				top: 0;
				left: 0;
				bottom: 0;
				margin: auto 0;
			}

			&:disabled {
				opacity: 0.5;
			}

			&:hover {
				background: darken($theme-color, 5%);
			}

			&:active {
				background: darken($theme-color, 10%);
			}
		}

	}

	.nav {
		width: 302px;
		margin: 0 auto;

		.signin {
			display: block;
			margin: 16px 0;
			color: rgba(0, 0, 0, 0.5);
			font-size: 0.7em;

			> i {
				margin-right: 0.3em;
			}
		}
	}
}

body > footer {
	text-align: center;
}
