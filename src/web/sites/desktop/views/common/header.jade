	div#misskey-post-form-back(role='presentation')
	div#misskey-post-form-container
		form#misskey-post-form(enctype='multipart/form-data', role='form')
			button.close-button(type='button', role='button')
				i.fa.fa-times
			ul#misskey-post-form-tabs
				li(data-ref='misskey-post-form-status-tab-page', title='近況')
					i.fa.fa-comment-o
				li(data-ref='misskey-post-form-photo-status-tab-page', title='画像付き投稿')
					i.fa.fa-picture-o
				li(data-ref='misskey-post-form-video-status-tab-page', title='動画付き投稿')
					i.fa.fa-film
				li(data-ref='misskey-post-form-audio-status-tab-page', title='音声付き投稿')
					i.fa.fa-music
				li(data-ref='misskey-post-form-poll-tab-page', title='投票')
					i.fa.fa-pie-chart
			div#misskey-post-form-tab-pages
				div#misskey-post-form-status-tab-page
					textarea(name='text', placeholder='What\'s up?', role='textbox', aria-multiline)
					button.submit(type='submit')
