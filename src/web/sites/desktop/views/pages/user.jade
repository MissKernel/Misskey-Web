extends ../layouts/user

block title
	= user.name

block assets
	link(rel='stylesheet', href='/resources/desktop/styles/page/user-home.css')
	script(src='/resources/desktop/scripts/page/user-home.js')

block contents
	div#main-content
		div#timeline!= timelineHtml
	div#sub-contents
		div#friend-form
			if login
				if me.id != user.id
					if user.isFollowMyself
						p#friend-status
							i.fa.fa-heart
							| フォローされています
					if user.isFollowing
						button#friend-button.following フォロー中
					else
						button#friend-button.not-following フォロー
				else
					p#friend-status
						i.fa.fa-smile-o
						| You
			else
				p
					| このユーザーをフォローするにはログインしてください
						
		if recentPhotoStatuses != null && recentPhotoStatuses.length > 0
			section#photos
				h2
					i.fa.fa-camera
					| Photos
				//
					ol.photos
						each status in recentPhotoStatuses
							li.photo(style='background-image: url("' + status.imageUrls[0] + '")', title=status.displayCreatedAt)
								a(href=config.url + '/' + user.screenName + '/status/' + status.id)
