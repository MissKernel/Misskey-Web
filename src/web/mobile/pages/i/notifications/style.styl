@import "../../../common/styles/ui";
@import "../../../common/styles/notification";

html, #misskey-main {
	color: #000;
	background: #F1E9E2;
}

#stream {
	padding: 8px;
	margin: 0 auto;
	padding: 8px;
	max-width: 500px;

	> .notifications {
		display: block;
		margin: 0;
		padding: 0;
		list-style: none;

		> .empty {
			display: block;
			box-sizing: border-box;
			margin: 0;
			padding: 16px;
			text-align: center;
			color: #A0877E;

			> i {
				margin-right: 0.25em;
			}
		}

		> .notification {
			notification()
		}
	}

	> .read-more {
		-webkit-appearance: none;
		-moz-appearance: none;
		appearance: none;
		-webkit-user-select: none;
		-moz-user-select: none;
		-ms-user-select: none;
		user-select: none;
		display: block;
		box-sizing: border-box;
		width: 100%;
		margin: 0;
		padding: 0;
		line-height: 3.25em;
		font-size: 1em;
		color: #A98C76;
		cursor: pointer;
		background: #fffbfb;
		outline: none;
		border: none;
		border-bottom-left-radius: 8px;
		border-bottom-right-radius: 8px;

		&:disabled {
			color: #E4D6CB;
		}

		> i {
			margin-right: 0.5em;
		}

		> p {
			display: inline;
		}
	}
}

@media (min-width: 600px) {
	#stream {
		padding: 16px 8px;
	}
}
