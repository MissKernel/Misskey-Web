@import "../../common/styles/ui";
@require "../../common/styles/post";

html, #misskey-main {
	color: #000;
	background: #fff;
}

main {
	#post {
		position: relative;
		margin: 0;
		padding: 0 0 24px 0;
		font-size: 0.9em;

		.post;

		> .post-in-talk {
			sub-article()
		}

		> .post-in-replies {
			sub-article()
		}
	}
}

#form {
	padding: 8px;
	background: #fff;

	button[type=submit] {
		> p {
			display: inline;
			margin: 0;
		}

		> i {
			margin-left: 0.5em;
		}
	}

	progress {
		-webkit-appearance: none;
		-moz-appearance: none;
		appearance: none;
		display: none;
		margin: 8px 0;
		width: 100%;
		height: 8px;
		border: none;
		border-radius: 4px;
		overflow: hidden;

		&::-webkit-progress-value {
			background-color: $theme-color;
		}

		&::-webkit-progress-bar {
			background-color: #fff;
		}

		&:not([value])::-webkit-progress-bar {
			background-image: url("@{resources-url}/mobile/common/images/indeter.gif");
		}
	}
}
